<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/itemHome">

    <fragment
        android:id="@+id/itemHome"
        android:name="com.petworld.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/actionProfileFragment"
            app:destination="@id/itemProfile"
            app:popUpTo="@id/itemProfile" />
        <action
            android:id="@+id/actionDetailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/signUpFragment" />
        <action
            android:id="@+id/action_itemHome_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_itemHome_to_itemCreate"
            app:destination="@id/itemCreate" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.petworld.view.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="id_berita"
            app:argType="string" />
        <argument
            android:name="img_url"
            app:argType="string" />
        <argument
            android:name="user"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/itemProfile"
        android:name="com.petworld.view.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/actionHomeFragment"
            app:destination="@id/itemHome"
            app:popUpTo="@id/itemHome" />
        <action
            android:id="@+id/action_itemProfile_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.petworld.view.SignInFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/actionSignUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_itemHome2"
            app:destination="@id/itemHome" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.petworld.view.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/actionSignInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemCreate"
        android:name="com.petworld.view.CreateFragment"
        android:label="Create"
        tools:layout="@layout/fragment_create">
        <action
            android:id="@+id/actionCreateDetail"
            app:destination="@id/createDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/createDetailFragment"
        android:name="com.petworld.view.CreateDetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_create_detail">
        <action
            android:id="@+id/action_createDetailFragment_to_itemHome"
            app:destination="@id/itemHome" />
        <argument android:name="id" />
    </fragment>
</navigation>